		e.stopPropagation()
		profile.classList.toggle('active');
	})

	document.addEventListener('click', e => {
		let target = e.target;
		if (!target) {
			return;
		}

		if (target.classList.contains('auth-user-list') || target.classList.contains('additional-user-open') || target.closest('.auth-user-list') || target.closest('.additional-user-open')) {
			return;
		}

		profile.classList.remove('active');
	});
}

