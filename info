<script nonce="39b22f69">
$(document).ready(function(){
    appendRating(78039);
});

function appendRating(wiki_structure_id){

    let structure_id = wiki_structure_id;

    $('.wiki-rate .ui.rating').rating({
        onRate: function (rate){
            AjaxRequest.action('/action/site/wiki/rate/', {rate, structure_id});
        }
    });

    if(parseInt('0') < 1 ) return;

    let snippetFormat = {
        "@context": "https://schema.org",
        "@type": "Article",
        "itemReviewed": {
            "@type": "Service",
            "name": document.title.replace(/\s*\|\s+.+?$/, "")
        },
        "author": {
            "@type": "Organization",
            "name": 'ТОВ "Хостинг «Україна»"',
            "url": "https://www.ukraine.com.ua/"
        },
        "reviewRating": {
            "@type": "Rating",
            "ratingValue": "0",
            "bestRating": 5,
            "ratingCount" : 0        },
    }

    const script = document.createElement('script');
    script.setAttribute('type', 'application/ld+json');
    script.textContent = JSON.stringify(snippetFormat);
    document.head.appendChild(script);
}
