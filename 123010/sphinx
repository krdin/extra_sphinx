(function() {
    var $d = $(document)

    var openBtnEl = '.js-udd-open-btn'
    var targetEl = '.js-udd-target'

    var showClass = '_show'

    var showTarget = function($target) {
        $target
            .addClass(showClass)
            .attr('aria-hidden', false)
    }

    var closeOpenedTargets = function() {
        $(targetEl)
            .removeClass(showClass)
            .attr('aria-hidden', true)
    }

    var openBtnClick = function(e) {
        var $that = $(this)
        var targetId = $that.data('target')
        var direction = $that.data('direction') || 'ne'
        var targetWidth = $that.data('width')
        var $target = $(targetEl + '[data-id="' + targetId + '"]')
        var btnPos = $that.position()
        var btnWidth = $that.outerWidth()

        // Закрываем дропдаун если нажимает на открытый
        if ($target.hasClass(showClass)) {
            closeOpenedTargets()
            return
        }

        if (direction === 'ne') {
            $target.css({
                left: btnPos.left + btnWidth - targetWidth - 10,
                transformOrigin: 'right top 0',
            })
        } else if (direction === 'n') {
            $target.css({
                left: btnPos.left + (btnWidth / 2) - (targetWidth / 2),
                transformOrigin: 'center top 0',
            })
        }

        $target.css({width: targetWidth})

        // Закрываем все дропдаун, показываем текущий
        closeOpenedTargets()
        showTarget($target)
    }

    var docClick = function(e) {
        var $t = $(e.target)
        var isOpenBtn = $t.closest(openBtnEl).length
        var isDropDownTarget = $t.closest(targetEl).length

        if (!isOpenBtn && !isDropDownTarget) {
            closeOpenedTargets()
        }
    }

    $d.on('click', openBtnEl, openBtnClick)
    $d.on('click', docClick)

    "";
    initAccLeftMenu();
    "";
})();

function accMenuDropdownChange(value) {
    if(value === 'add_new') {
        return;
    }

    const option = document.querySelector(`.js-acc-menu-dropdown select option[value='${value}']`);

    localStorage.tabId = option.dataset.id;
    document.location.href = option.dataset.url;
}

function changeServicesUrls(accountId) {
    $('.side-menu__link:not(.side-menu__link--bookmark)').each(function() {
        let link = $(this);
        if(!link.attr('href')) {
            return;
        }

        let newHref = link.attr('href').replace(/^(.*\?account_id=)(\d+)/g, '$1' + accountId);
        newHref = newHref.replace(/^(.*\/hosting\/account\/)\d+(\/.*)/g, '$1' + accountId + '$2');
        link.attr('href', newHref);
    });
}

function initAccLeftMenu() {
    let menuDropdown = $('.js-acc-menu-dropdown');
    menuDropdown.dropdown({
        fullTextSearch: true,
        allowReselection: false,
        match: 'both'
    });

    /**
     * Показывать меню реселлера
     * @type {jQuery}
     */
    let selected = menuDropdown.find(':selected');
    if(selected.length > 0) {
        changeServicesUrls(selected.data('id'));
    }

    if(!selected.length) {
        let firstOption = menuDropdown.find('select > option[value!=0]:first-child');
        if(firstOption.length > 0) {
            menuDropdown.dropdown('set selected', firstOption.value);
        }
    }

    ToolbarUser.setLightIcon();

    let menu = document.querySelector('.c-select-account div.dropdown');
    if(menu){
        let node = document.createElement('div'),
            node_icon = document.createElement('i');

        node_icon.classList.add('fad', 'fa-plus-circle', 'ficon');
        node.classList.add('ui', 'show-order-form');
        node.innerText = "Замовити новий";
        node.setAttribute("onclick", "return AjaxRequest.action('/action/hosting/account/order_form/');");
        node.insertBefore(node_icon, node.firstChild);
        menu.querySelector('.menu').appendChild(node);
    }
}

function ftp_restore(account_id){
    return AjaxRequest.confirm('Відновити права доступу до всіх файлів і папок?').action('/action/hosting/service/chmod/', {account_id})
}
