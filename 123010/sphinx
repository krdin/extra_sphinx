					<h3 class="ui header">
						<i class="fa-solid fa-bolt icon"></i>
						<div class="content">Запити для завантаження в індекс
							<button class="ui green mini button" onclick="AjaxRequest.action('/action/extra/sphinx/query_form/', {'sphinx_index_id':135})">Додати запит</button>
						</div>
					</h3>
					<div class="sortable">
																				<div class="ui blue message mb-10" id="query_185">
								<i class="fa-solid fa-sort"></i>
								<span class="ui bold text">Запит на отримання даних для формування індексу</span>
								<button class="ui mini blue basic icon button right floated" onclick="AjaxRequest.action('/action/extra/sphinx/index_edit_form/', {'sphinx_index_id': 135})">
									<i class="fa-solid fa-pen-to-square icon"></i>
								</button>
								<div class="preformatted mt-10">SELECT
  p.product_id AS id,
  pd.name,
  pd.description,
  p.model,
  m.name AS manufacturer,
  p.price,
  p.image,
  cd.name AS category
FROM
  oc_product p
  JOIN oc_product_description pd ON p.product_id = pd.product_id
  LEFT JOIN oc_manufacturer m ON p.manufacturer_id = m.manufacturer_id
  LEFT JOIN oc_product_to_category ptc ON p.product_id = ptc.product_id
  LEFT JOIN oc_category_description cd ON ptc.category_id = cd.category_id
WHERE
  p.status = 1</div>
							</div>
																		</div>
				</div>
					</div>
	</div>
<script nonce="24f6669f">
$(function () {
	$('.js-popup').popup({variation: 'mini inverted'});
	$('.dropdown').dropdown();

	$(".sortable").sortable({
		update: function (event, ui) {
			var idsInOrder = $(event.target).closest("div.sortable").sortable("toArray");
			AjaxRequest.silent().action('/action/extra/sphinx/sort/', {'order': idsInOrder})
			console.log(idsInOrder);
		}
	}).on("sortupdate", function (event, ui) {
	});

	let acordionIndex = Cookie.get('sphinx_index_123010') * 1;
	$('.ui.accordion').accordion('open', acordionIndex).accordion({
		onOpening: function (item) {
			Cookie.set('sphinx_index_123010', this.index('.js_index_counter'), 2)
		}
	});
	$('.ui.checkbox').checkbox();
	if ('0') {
		reload_index_list();
	}
});

if(document.getElementById('sphinx_config')) {
	var editor = ace.edit('sphinx_config', {
		mode: "ace/mode/ini",
		selectionStyle: "text",
		fontSize: "14px"
	});
}


function save_config() {
	$('#sphinx_log').hide();
	let config = editor.getValue();
	return AjaxRequest.form('sphinx_config_from', {'config': config});
}

function update_config() {
	AjaxRequest.action('/action/extra/sphinx/config_load/', {account_id: '123010'}, function (data) {
		editor.setValue(data)
	});
}

function delete_query(query_id) {
	$(event.target).closest("div.ui-sortable-handle").remove();
	AjaxRequest.silent().action('/action/extra/sphinx/query_delete/', {query_id});
}

function delete_index(sphinx_index_id) {
	AjaxRequest.confirm('Видалити індекс?').silent().action('/action/extra/sphinx/index_delete/', {sphinx_index_id}, () => {
		$('#index_' + sphinx_index_id).remove();
		$('#index_header_' + sphinx_index_id).remove();
	});
}

function reload_index_list() {
	AjaxRequest.action('/action/extra/sphinx/index/list/', {account_id: '123010'});
}
