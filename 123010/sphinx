        window.csrf_token = 'Jp7jdURHr7gL7rjL5d9469Ky2r4tJHY8',
        window._n = '24f6669f',
		window.ERROR_MESSAGE_SYMBOL = 'Вказано неприпустимий символ.';
		window.user_is_switcher = +'';

		addEventListener('DOMContentLoaded', function(){
			$("div#checked_site").click(function () {
				if($("#checked_site_arrow").attr('title') == '0'){
					$("#checked_site_arrow").attr('title', '1');
					$("#checked_site_arrow").html("&uarr;");
				} else {
					$("#checked_site_arrow").attr('title', '0');
					$("#checked_site_arrow").html("&darr;");
				}
			});

			// adm.tools sidebar
			let htmlBlock = document.querySelector('html');
			document.querySelector('.js-sidebar-toggle-btn').addEventListener('click', () => {
				htmlBlock.classList.toggle('_sidebar-show');
			});

			// devices with touchscreen
			if(window.touchDevice) {
				swipeDetect(htmlBlock, direction => {
					if(direction === 'left') {
						htmlBlock.classList.remove('_sidebar-show');
					} else if(direction === 'right') {
						htmlBlock.classList.add('_sidebar-show')
					}
				})
			}
			// sidebar end

            '';

			'';

			'';
		});

		$(document).keyup(function(e){
			if (e.keyCode === 27) {
				DW.close();
			}
		});

        $(function() {
			let sideBarSearch = document.querySelector('.side-nav.side-nav--search');
            if(sideBarSearch) {

				let index;
				sideBarSearch.addEventListener('keydown', function(e) {
					if(!['ArrowDown', 'ArrowUp'].includes(e.key)) {
						return false;
					}

					let inputGlobalSearch = document.getElementById('global_search'),
						searchResult = document.getElementById('search_result'),
						links = searchResult.querySelectorAll('.item a'),
						len = links.length - 1;

					if(e.key === 'ArrowDown'
						&& document.activeElement === inputGlobalSearch
						&& searchResult.innerHTML
					) {
						index = -1;
					}

					if(e.key === 'ArrowDown' || e.key === 'ArrowUp') {
						e.preventDefault();
					}

					if(e.key === 'ArrowDown') {
						if(index < len) {
							index++;
							links[index].setAttribute('tabindex', '-1');
							links[index].focus();

						} else if(index === len) {
							index = 0;
							links[index].setAttribute('tabindex', '-1');
							links[index].focus();
						}
					} else if(e.key === 'ArrowUp') {
						if(index > 0) {
							--index;
							links[index].setAttribute('tabindex', '-1');
							links[index].focus();
						} else if(index === 0) {
							index = len;
							links[index].setAttribute('tabindex', '-1');
							links[index].focus();
						}
					}
				});

				let searchTimeout;
				document.getElementById('global_search').addEventListener('keyup', function(e) {
					if(!e.key.indexOf('Arrow')) {
						return false;
					}

					clearTimeout(searchTimeout);

					let text = document.getElementById('global_search');

					if(!text) {
						return;
					}

					let value = text.value.trim();

					if(!value.length) {
						let searchResult = document.getElementById('search_result');

						if(!searchResult) {
							return;
						}

						searchResult.innerHTML = '';
						return;
					}

					searchTimeout = setTimeout(function () {
						value = text.value.trim();
						AjaxRequest.action('/action/hosting/search/result/', {'text': value});
					}, 1000);
				})
			}
        });

	</script>

